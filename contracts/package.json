{
  "name": "blockchain-voting-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the Blockchain Voting system",
  "main": "index.js",
  "scripts": {
    "compile": "truffle compile",
    "migrate": "truffle migrate",
